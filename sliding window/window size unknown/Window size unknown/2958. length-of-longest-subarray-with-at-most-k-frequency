class Solution {
public:
    long long countSubarrays(vector<int>& nums, int k) {
        int maxi = 0;
        
        int n = nums.size();

        if(k > n){
            return 0;
        }
        maxi = *max_element(nums.begin(), nums.end());
        int count = 0;
        long long ans = 0;

        int i = 0;
        int j = 0;

        while (j < n) {
            if (nums[j] == maxi) {
                count++;
            }
            while (count >= k) {
               ans += n - j;
                if (nums[i] == maxi) {
                    count--;
                }
                 
                i++;
            }
            j++;
        }

        return ans;

        // for(int i = 0; i < n ; i++){
        //     for(int j = i ; j < n ; j++){
        //         if(nums[j] == maxi){
        //             count++;
        //         }
        //         if(count >= k){
        //             ans++;
        //         }
        //     }
        //     count = 0;
        // }
        // return ans;
    }
};
